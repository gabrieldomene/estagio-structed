<div class="container">

    <div class="table-responsive">
        <table data-toggle="table" id="table" class="table table-hover table-sm">
            {{#if objeto}}
            <thead>
                <tr>   
                    <th scope="col">Descrição</th>
                    <th scope="col">Capacidade</th>
                    <th scope="col">Tipo da Sala</th>
                    <th scope="col">ID Centro</th>  
                    <th scope="col">Ação</th>  
                </tr>
            </thead>
            <tbody>
                {{#each objeto}}
                    <tr id="{{this.descricao}}">
                       
                        <td>{{this.descricao}}</td>
                        <td>{{this.capacidade}}</td>
                        <td>{{this.tipoSala}}</td>
                        <td>{{this.idcentro}}</td>
                        <td>
                            

                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#{{this.descricao}}">Editar</button>
                            <a href="#" class="btn btn-danger" onclick="dispara()">Remover</a>
                            
                        </td>
                    </tr>
                    <div class="modal fade" id="{{this.descricao}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form action="/roomUpdate" method="POST">
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Descrição</label>
                                        <input type="text" class="form-control" name="descricao" id="descricao-name" value="{{this.descricao}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Capacidade</label>
                                        <input type="text" class="form-control" name="capacidade" id="capacidade" value="{{this.capacidade}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Tipo sala</label>
                                        <input type="text" class="form-control" name="tipoSala" id="tipoSala" value="{{this.tipoSala}}">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Salvar</button>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </tbody>
            {{/if}}
        </table>
    </div>
    <a href="/" class="btn btn-primary" onclick="teste()">VOLTAR</a>

</div>