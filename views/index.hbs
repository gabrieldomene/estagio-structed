            {{!-- <h3>LOGIN</h3> --}}
            <form action="/login" method="post" id="form-login">
                <div class="form-group">
                    <label for="username">Nome do usuário</label>
                    <input type="text" class="form-control" id="username" aria-describedby="username" placeholder="Nome do usuário" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" id="loginpassword" aria-describedby="username" placeholder="Digite senha" name="password">
                </div>
                {{#if msg_login}}
                    <div class="alert alert-danger" role="alert">
                        {{msg_login}}
                    </div>
                {{/if}}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="btnLogin" form="form-login">ENTRAR</button>
                    {{!-- <a href="#" onclick="alert('Em desenvolvimento')">Esqueci minha senha</a> --}}
                </div>
            </form>
        </div>

