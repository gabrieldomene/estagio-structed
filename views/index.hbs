<div class="container-fluid">

    <h1 id="titulo">CADASTRO ENSALAMENTO UFSC</h1>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-3">
            <h3>LOGIN</h3>
            <form action="/login" method="post" id="form-login">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" aria-describedby="username" placeholder="Username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="loginpassword" aria-describedby="username" placeholder="Digite senha" name="password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="btnLogin" form="form-login">LOGIN</button>
                </div>
            </form>
        </div>
        <div class="col-lg-3">
            <h3>CADASTRO DE USUÁRIOS</h3>
            <form action="/cadastrar" method="POST" id="form-cadastro">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" id="cad-username" aria-describedby="username" placeholder="Username"
                        required oninvalid="this.setCustomValidity('Campo obrigatório')" oninput="this.setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" aria-describedby="username" placeholder="Digite uma senha"
                        oninvalid="this.setCustomValidity('Campo obrigatório')" oninput="this.setCustomValidity('')" onchange="checkPass()">
                </div>

                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text centros" for="inputGroupSelect01">Centros</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01" name="centroID" id="centro-id" required oninvalid="this.setCustomValidity('Campo Obrigatório'"
                            oninput="this.setCustomValidity('')">
                            <option value="" selected disabled hidden>Listar centros...</option>
                            <option value="1">Centro Araranguá</option>
                            <option value="2">Centro Blumenau</option>
                            <option value="3">Centro Curitibanos</option>
                            <option value="4">Centro de Ciência da Educação</option>
                            <option value="5">Centro de Ciência da Saúde</option>
                            <option value="6">Centro de Ciências Agrárias</option>
                            <option value="7">Centro de Ciências Biológicas</option>
                            <option value="8">Centro de Ciências Físicas e Matemáticas</option>
                            <option value="9">Centro de Ciências Jurídicas</option>
                            <option value="10">Centro de Comunicação e Expressão</option>
                            <option value="11">Centro de Desportos</option>
                            <option value="12">Centro de Filosofia e Ciências Humanas</option>
                            <option value="13">Centro de Joinville</option>
                            <option value="14">Centro Socioeconômico</option>
                            <option value="15">Centro Tecnológico</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="btnCadastro" for="form-cadastro" disable>CADASTRAR</button>
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>